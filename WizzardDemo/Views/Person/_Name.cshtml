@model WizardDemo.Models.PersonViewModel

@{
    AjaxOptions ajaxOptions = new AjaxOptions
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "form-container"
    };


    var LabelProperties = new { @class = "horizontal-form-label" };
    var InputProperties = new { @class = "form-control form-control-inline" };
    var ErrorMessageProperties = new { @class = "validation-error-inline" };
}

<div id="main">
    <div class="main-container" data-namespace="person-form">
        <div id="form-container">
            @Html.Partial("NavBarDefault", Model.NavBar)

            @using (Ajax.BeginForm(Model.ActionName, Model.ControllerName, ajaxOptions, new { id = "person-form", @class = "brick-wizard-form" }))
            {
                <fieldset>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-group">
                                @Html.LabelFor(model => model.PersonName.PersonFirstName, LabelProperties)
                                @Html.TextBoxFor(model => model.PersonName.PersonFirstName, InputProperties)
                                @Html.ValidationMessageFor(model => model.PersonName.PersonFirstName, "", ErrorMessageProperties)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.PersonName.PersonLastName, LabelProperties)
                                @Html.TextBoxFor(model => model.PersonName.PersonLastName, InputProperties)
                                @Html.ValidationMessageFor(model => model.PersonName.PersonLastName, "", ErrorMessageProperties)
                            </div>
                        </div>
                    </div>

                    <div class="btn-group" role="group" aria-label="...">
                        <button type="submit" class="btn btn-primary">
                            NEXT <i class="glyphicon glyphicon-chevron-right"></i>
                        </button>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>



<script>
    $(function () {
        brickWizardHandlerInit();
    });
</script>







