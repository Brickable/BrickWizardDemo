@model WizardDemo.Models.PersonViewModel

@using WizardDemo.HtmlHelpers

<div id="form-container">
    @Html.Partial("NavBarDefault", Model.NavBar)

    @using (Ajax.BeginForm(Model.ActionName, Model.ControllerName, StandardHtmlAttributes.AjaxOptions, StandardHtmlAttributes.BrickWizardForm("person-form")))
    {
        <fieldset>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.PersonName.PersonFirstName, StandardHtmlAttributes.Label)
                        @Html.TextBoxFor(model => model.PersonName.PersonFirstName, StandardHtmlAttributes.Input)
                        @Html.ValidationMessageFor(model => model.PersonName.PersonFirstName, "", StandardHtmlAttributes.ErrorMessage)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PersonName.PersonLastName, StandardHtmlAttributes.Label)
                        @Html.TextBoxFor(model => model.PersonName.PersonLastName, StandardHtmlAttributes.Input)
                        @Html.ValidationMessageFor(model => model.PersonName.PersonLastName, "", StandardHtmlAttributes.ErrorMessage)
                    </div>
                </div>
            </div>

            @Html.BrickWizardSubmitActions(ButtonsToRender.JustSubmit,SubmitStyle.Next)
        </fieldset>
    }
</div>


<script>
    $(function () {
        brickWizardHandlerInit();
    });
</script>







