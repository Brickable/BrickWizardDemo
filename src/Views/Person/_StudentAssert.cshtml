@model WizardDemo.Models.PersonViewModel

@Html.DisplayFor(m => m.NavBar)

<form action="@Url.Action(Model.ActionName,Model.ControllerName, new { area = Model.AreaName })" , data-replace-target-selector="#form-container" class="brick-wizard-form">
    <fieldset>
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.FormControl(model => model.PersonIsStudent.IsStudent, TypeOfInput.CheckBox)
            </div>
        </div>
        @Html.BrickWizardSubmitActions(ButtonsToRender.Both, SubmitStyle.Next, Url.Action(Model.PreviousStepActionName, Model.ControllerName))
    </fieldset>
</form>
<script>
    brickWizardHandlerInit();
</script>

